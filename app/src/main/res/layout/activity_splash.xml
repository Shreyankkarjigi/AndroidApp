<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0000000"
    tools:context=".Splash">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="502dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:backgroundTint="#DC000000"
        android:contentDescription="TODO"
        android:cropToPadding="true"
        android:scaleType="fitEnd"
        android:visibility="visible"
        app:srcCompat="@drawable/get_rekt"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="401dp"
        android:layout_height="124dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="91dp"
        android:fontFamily="@font/michroma"
        android:gravity="center_horizontal"
        android:text="@string/welcome_to_the_employee_portal"
        android:textColor="@color/cardview_light_background"
        android:textSize="28sp"
        android:visibility="visible"
        tools:text="Welcome to Employee Portral!"
        tools:visibility="visible" />

</RelativeLayout>