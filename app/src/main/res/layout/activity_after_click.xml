<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DC000000">

    <ImageView
        android:id="@+id/imagev"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:background="#DC000000"
        android:backgroundTint="#E2FFFFFF"
        android:foregroundTint="#00945C5C"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:srcCompat="@drawable/bk_image"
        tools:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DC000000"
        android:backgroundTint="#DF000000"
        android:visibility="visible"
        tools:visibility="visible">

        <ScrollView
            style="@android:style/Widget.ScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:background="#DF000000"
            android:scrollbarStyle="insideOverlay"
            android:visibility="visible"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUser"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/michroma"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="textview"
                    android:textColor="#E2FFFFFF"
                    android:textSize="24sp"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/salUser"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/cardview_default_elevation"
                    android:fontFamily="@font/michroma"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/textview"
                    android:textColor="#E2FFFFFF"
                    android:textSize="24sp"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/dateUser"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/cardview_default_elevation"
                    android:fontFamily="@font/michroma"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/textview"
                    android:textColor="#E2FFFFFF"
                    android:textSize="24sp"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/phoneUser"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/cardview_default_elevation"
                    android:fontFamily="@font/michroma"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/textview"
                    android:textColor="#E2FFFFFF"
                    android:textSize="24sp"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/ageUser"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/cardview_default_elevation"
                    android:fontFamily="@font/michroma"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/textview"
                    android:textColor="#E2FFFFFF"
                    android:textSize="24sp"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/dobUser"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/cardview_default_elevation"
                    android:fontFamily="@font/michroma"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/textview"
                    android:textColor="#E2FFFFFF"
                    android:textSize="24sp"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
</RelativeLayout>